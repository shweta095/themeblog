<div class="comment">
<div class="col-md-1 user-photo"><%=image_tag comment.user.image.url(:circle), style: "border-radius: 50%;"%></div>

<ul class="inline-list dot-seperator">
<li><a href="#"><%= comment.user.user_name %></a></li>
									<li class="small"><%=l comment.created_at, :format => :sample%></li>
								</ul>
  
  




<div class="comment-body">
							
							
								
									
								<p style="padding-left:5px"><%= comment.body %></p>
								<div class="comment-footer">
								<% if comment.user.user_name == current_user.user_name%>
								<%= link_to 'Edit', edit_article_comment_path(:article_id => comment.article_id, :id => comment.id), :style => "font-size:13px" %>
								<%= link_to 'Delete', edit_article_comment_path(:article_id => @comment.article.id, :id => comment.id), method: :delete, remote: true, data: {confirm: "Are You Sure?"}, :style => "font-size:13px"%>
								<%else%>
								<%= link_to 'Delete', edit_article_comment_path(:article_id => @comment.article.id, :id => comment.id), method: :delete, remote: true, data: {confirm: "Are You Sure?"}, :style => "font-size:13px"%>
								<%end%>

									
								</div><!--.comment-footer-->
								}
							</div><!--.comment-body-->
						</div><!--.comment-->